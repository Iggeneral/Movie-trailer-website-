<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸŽ¬ CineFlix - Movie Trailers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #ff4757;
            --secondary: #3742fa;
            --dark: #2f3542;
            --light: #f1f2f6;
            --gradient: linear-gradient(135deg, #ff4757, #3742fa);
            --glass: rgba(255, 255, 255, 0.1);
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            color: var(--light);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header Styles */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 30px 0;
            animation: slideDown 0.8s ease-out;
        }

        .logo {
            font-size: 2.5rem;
            font-weight: 900;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo i {
            font-size: 3rem;
            -webkit-text-fill-color: var(--primary);
        }

        .search-container {
            position: relative;
            width: 400px;
        }

        .search-box {
            width: 100%;
            padding: 15px 50px 15px 20px;
            background: var(--glass);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            color: white;
            font-size: 1rem;
            transition: var(--transition);
        }

        .search-box:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 20px rgba(255, 71, 87, 0.3);
            transform: scale(1.02);
        }

        .search-btn {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: var(--gradient);
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            transition: var(--transition);
        }

        .search-btn:hover {
            transform: translateY(-50%) scale(1.1);
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 60px 20px;
            margin: 30px 0;
            background: var(--glass);
            backdrop-filter: blur(10px);
            border-radius: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            animation: fadeIn 1s ease-out;
        }

        .hero h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
            background: linear-gradient(45deg, #ff9a9e, #fad0c4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: glow 2s ease-in-out infinite alternate;
        }

        .hero p {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 700px;
            margin: 0 auto 30px;
        }

        /* Filter Bar */
        .filter-bar {
            display: flex;
            gap: 15px;
            margin: 30px 0;
            flex-wrap: wrap;
            animation: fadeInUp 0.8s ease-out 0.2s both;
        }

        .filter-btn {
            padding: 12px 25px;
            background: var(--glass);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            color: white;
            cursor: pointer;
            transition: var(--transition);
            font-weight: 500;
        }

        .filter-btn:hover, .filter-btn.active {
            background: var(--gradient);
            transform: translateY(-3px);
            box-shadow: var(--shadow);
        }

        /* Movie Grid */
        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 40px;
        }

        .movie-card {
            background: var(--glass);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            overflow: hidden;
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.1);
            animation: fadeInUp 0.6s ease-out;
            animation-fill-mode: both;
        }

        .movie-card:hover {
            transform: translateY(-15px) scale(1.03);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
            border-color: var(--primary);
        }

        .movie-card:nth-child(2) { animation-delay: 0.1s; }
        .movie-card:nth-child(3) { animation-delay: 0.2s; }
        .movie-card:nth-child(4) { animation-delay: 0.3s; }
        .movie-card:nth-child(5) { animation-delay: 0.4s; }
        .movie-card:nth-child(6) { animation-delay: 0.5s; }

        .movie-poster {
            width: 100%;
            height: 400px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .movie-card:hover .movie-poster {
            transform: scale(1.1);
        }

        .movie-info {
            padding: 25px;
        }

        .movie-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 15px;
        }

        .movie-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 5px;
        }

        .movie-rating {
            background: var(--gradient);
            padding: 5px 12px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .movie-genres {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin: 15px 0;
        }

        .genre-tag {
            background: rgba(255, 71, 87, 0.2);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            border: 1px solid rgba(255, 71, 87, 0.3);
        }

        .movie-description {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 20px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .movie-meta {
            display: flex;
            justify-content: space-between;
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .watch-btn {
            display: block;
            width: 100%;
            padding: 15px;
            background: var(--gradient);
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 15px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .watch-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(255, 71, 87, 0.4);
        }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            z-index: 1000;
            animation: fadeIn 0.3s ease-out;
        }

        .modal-content {
            position: relative;
            background: var(--dark);
            margin: 5% auto;
            padding: 0;
            width: 90%;
            max-width: 1000px;
            border-radius: 20px;
            overflow: hidden;
            animation: slideUp 0.4s ease-out;
        }

        .close-modal {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            font-size: 2rem;
            cursor: pointer;
            z-index: 1001;
            transition: var(--transition);
            background: rgba(0, 0, 0, 0.5);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .close-modal:hover {
            transform: rotate(90deg);
            background: var(--primary);
        }

        .modal-trailer {
            width: 100%;
            height: 500px;
            border: none;
        }

        .modal-info {
            padding: 30px;
        }

        /* Animations */
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(100px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 0 10px rgba(255, 154, 158, 0.5);
            }
            to {
                text-shadow: 0 0 20px rgba(255, 154, 158, 0.8),
                            0 0 30px rgba(255, 154, 158, 0.6);
            }
        }

        /* Loading */
        .loading {
            text-align: center;
            padding: 50px;
            font-size: 1.5rem;
            color: var(--primary);
        }

        .spinner {
            border: 5px solid rgba(255, 255, 255, 0.1);
            border-top: 5px solid var(--primary);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }

            header {
                flex-direction: column;
                gap: 20px;
            }

            .search-container {
                width: 100%;
            }

            .hero h1 {
                font-size: 2.5rem;
            }

            .movie-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
                gap: 20px;
            }

            .modal-trailer {
                height: 300px;
            }
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 40px 20px;
            margin-top: 60px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.5);
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <i class="fas fa-film"></i>
                <span>CineFlix</span>
            </div>
            <div class="search-container">
                <input type="text" class="search-box" id="searchBox" placeholder="Search movies, genres, actors...">
                <button class="search-btn" id="searchBtn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </header>

        <section class="hero">
            <h1>Discover Amazing Movie Trailers</h1>
            <p>Watch the latest and greatest movie trailers with stunning visuals and immersive experience. Updated daily with new releases.</p>
            <div class="filter-bar" id="filterBar">
                <button class="filter-btn active" data-genre="all">All Movies</button>
                <!-- Genres will be loaded dynamically -->
            </div>
        </section>

        <div id="loading" class="loading">
            <div class="spinner"></div>
            <p>Loading amazing trailers...</p>
        </div>

        <div class="movie-grid" id="movieGrid">
            <!-- Movies will be loaded dynamically -->
        </div>

        <footer>
            <p>ðŸŽ¬ CineFlix - Movie Trailer Collection | Made with <i class="fas fa-heart" style="color: var(--primary);"></i> for movie lovers</p>
            <p style="margin-top: 10px; font-size: 0.9rem;">Â© 2024 All rights reserved | Trailers from YouTube</p>
        </footer>
    </div>

    <!-- Modal for trailer -->
    <div class="modal" id="trailerModal">
        <div class="modal-content">
            <span class="close-modal" id="closeModal">&times;</span>
            <iframe class="modal-trailer" id="modalTrailer" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
            <div class="modal-info" id="modalInfo">
                <!-- Movie details will be loaded here -->
            </div>
        </div>
    </div>

    <script>
        // API Configuration
        const API_BASE = '/api';
        let allMovies = [];
        let currentGenre = 'all';
        let currentSearch = '';

        // DOM Elements
        const movieGrid = document.getElementById('movieGrid');
        const loading = document.getElementById('loading');
        const filterBar = document.getElementById('filterBar');
        const searchBox = document.getElementById('searchBox');
        const searchBtn = document.getElementById('searchBtn');
        const trailerModal = document.getElementById('trailerModal');
        const modalTrailer = document.getElementById('modalTrailer');
        const modalInfo = document.getElementById('modalInfo');
        const closeModal = document.getElementById('closeModal');

        // Initialize
        document.addEventListener('DOMContentLoaded', async () => {
            await loadMovies();
            await loadGenres();
            setupEventListeners();
        });

        // Load movies from API
        async function loadMovies() {
            try {
                loading.style.display = 'block';
                movieGrid.innerHTML = '';
                
                const response = await fetch(`${API_BASE}/movies`);
                allMovies = await response.json();
                
                displayMovies(allMovies);
                loading.style.display = 'none';
            } catch (error) {
                console.error('Error loading movies:', error);
                loading.innerHTML = '<p>Error loading movies. Please refresh.</p>';
            }
        }

        // Load genres from API
        async function loadGenres() {
            try {
                const response = await fetch(`${API_BASE}/genres`);
                const genres = await response.json();
                
                genres.forEach(genre => {
                    const btn = document.createElement('button');
                    btn.className = 'filter-btn';
                    btn.textContent = genre;
                    btn.dataset.genre = genre.toLowerCase();
                    btn.onclick = () => filterByGenre(genre);
                    filterBar.appendChild(btn);
                });
            } catch (error) {
                console.error('Error loading genres:', error);
            }
        }

        // Display movies in grid
        function displayMovies(movies) {
            movieGrid.innerHTML = '';
            
            if (movies.length === 0) {
                movieGrid.innerHTML = `
                    <div style="grid-column: 1 / -1; text-align: center; padding: 50px;">
                        <h3>No movies found</h3>
                        <p>Try a different search or filter</p>
                    </div>
                `;
                return;
            }
            
            movies.forEach(movie => {
                const movieCard = document.createElement('div');
                movieCard.className = 'movie-card';
                movieCard.innerHTML = `
                    <img src="${movie.thumbnail}" alt="${movie.title}" class="movie-poster" 
                         onerror="this.src='https://via.placeholder.com/300x450/2f3542/ffffff?text=No+Image'">
                    <div class="movie-info">
                        <div class="movie-header">
                            <h3 class="movie-title">${movie.title}</h3>
                            <div class="movie-rating">
                                <i class="fas fa-star"></i>
                                <span>${movie.rating}</span>
                            </div>
                        </div>
                        <div class="movie-meta">
                            <span><i class="far fa-calendar"></i> ${movie.releaseYear}</span>
                            <span><i class="far fa-clock"></i> ${movie.duration}</span>
                        </div>
                        <div class="movie-genres">
                            ${movie.genre.map(g => `<span class="genre-tag">${g}</span>`).join('')}
                        </div>
                        <p class="movie-description">${movie.description}</p>
                        <button class="watch-btn" onclick="openTrailer(${movie.id})">
                            <i class="fas fa-play"></i>
                            Watch Trailer
                        </button>
                    </div>
                `;
                movieGrid.appendChild(movieCard);
            });
        }

        // Filter by genre
        function filterByGenre(genre) {
            currentGenre = genre.toLowerCase();
            
            // Update active button
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.genre === currentGenre) {
                    btn.classList.add('active');
                }
            });
            
            let filtered = allMovies;
            
            if (currentGenre !== 'all') {
                filtered = filtered.filter(movie => 
                    movie.genre.some(g => g.toLowerCase() === currentGenre)
                );
            }
            
            if (currentSearch) {
                filtered = filtered.filter(movie =>
                    movie.title.toLowerCase().includes(currentSearch) ||
                    movie.description.toLowerCase().includes(currentSearch) ||
                    movie.genre.some(g => g.toLowerCase().includes(currentSearch))
                );
            }
            
            displayMovies(filtered);
        }

        // Open trailer modal
        function openTrailer(movieId) {
            const movie = allMovies.find(m => m.id === movieId);
            if (!movie) return;
            
            modalTrailer.src = movie.trailerUrl;
            modalInfo.innerHTML = `
                <h2 style="font-size: 2rem; margin-bottom: 15px; color: white;">${movie.title}</h2>
                <div style="display: flex; gap: 20px; margin-bottom: 20px;">
                    <span style="background: var(--primary); padding: 5px 15px; border-radius: 20px;">
                        <i class="fas fa-star"></i> ${movie.rating}/10
                    </span>
                    <span style="background: rgba(255,255,255,0.1); padding: 5px 15px; border-radius: 20px;">
                        <i class="far fa-clock"></i> ${movie.duration}
                    </span>
                </div>
                <p style="margin-bottom: 15px; color: rgba(255,255,255,0.8);">${movie.description}</p>
                <div style="margin-bottom: 15px;">
                    <strong style="color: white;">Director:</strong> ${movie.director}
                </div>
                <div style="margin-bottom: 15px;">
                    <strong style="color: white;">Cast:</strong> ${movie.cast.join(', ')}
                </div>
                <div class="movie-genres">
                    ${movie.genre.map(g => `<span class="genre-tag">${g}</span>`).join('')}
                </div>
            `;
            
            trailerModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        // Close modal
        function closeTrailerModal() {
            trailerModal.style.display = 'none';
            modalTrailer.src = '';
            document.body.style.overflow = 'auto';
        }

        // Setup event listeners
        function setupEventListeners() {
            // Search functionality
            searchBtn.addEventListener('click', performSearch);
            searchBox.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') performSearch();
            });
            
            // Modal close
            closeModal.addEventListener('click', closeTrailerModal);
            trailerModal.addEventListener('click', (e) => {
                if (e.target === trailerModal) closeTrailerModal();
            });
            
            // Escape key to close modal
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') closeTrailerModal();
            });
        }

        // Perform search
        function performSearch() {
            currentSearch = searchBox.value.toLowerCase().trim();
            filterByGenre(currentGenre);
        }

        // Export functions to global scope
        window.openTrailer = openTrailer;
        window.closeTrailerModal = closeTrailerModal;
    </script>
</body>
</html>
